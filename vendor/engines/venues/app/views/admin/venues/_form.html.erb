<% form_for [:admin, @venue] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
    :object => @venue,
    :include_object_name => true
  } %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address -%>
  </div>
  
  <div class='field'>
    <%= label_tag :camera_rules -%>
    <%= f.check_box :allows_point_and_shoot %> <%= f.label :allows_point_and_shoot, 'Point & Shoot allowed?', :class => 'stripped' %><br>
    <%= f.check_box :allows_slr %> <%= f.label :allows_slr, 'SLR allowed?', :class => 'stripped' %><br>
    <%= f.check_box :allows_flash %> <%= f.label :allows_flash, 'Flash OK?', :class => 'stripped' %>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.venues.venue.delete'),
                :delete_confirmation => t('shared.admin.delete.message', :title => @venue.name)
              } %>
<% end -%>
