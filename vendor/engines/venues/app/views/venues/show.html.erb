
<% content_for :body_content_left do %>
  
  <div id="venue_name">
    <%= @venue.name %> <%= link_to 'edit', edit_venue_path %>
  </div>
  
  <div>
    <%= link_to @venue.address, "http://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=#{CGI::escape(raw @venue.address)}&ie=UTF8&z=16", :class => 'map_link' %>
  </div>
  
  
  <div id="camera_rules">
    <ul>
      <%= raw camera_rules_for(@venue) %>
    </ul>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <%= link_to 'Add a Venue', new_venue_path, :class => 'button positive' %>
  <ul id="venues">
    <% @venues.each do |venue| %>
      <li>
        <%= link_to venue.name, venue_url(venue), :class => selected?(venue) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
