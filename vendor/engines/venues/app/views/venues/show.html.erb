
<% content_for :body_content_left do %>
  
  <div id="venue_name">
    <%=raw @venue.name %>
  </div>
  
  <div>
    <%= link_to raw(@venue.address), "http://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=#{CGI::escape(raw @venue.address)}&ie=UTF8&z=16" %>
  </div>
  
  
  <div id="camera_rules">
    <ul>
      <%= raw camera_rules_for(@venue) %>
    </ul>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="venues">
    <% @venues.each do |venue| %>
      <li>
        <%= link_to venue.name, venue_url(venue), :class => selected?(venue) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
